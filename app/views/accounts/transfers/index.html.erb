<% provide(:title, "Fund Transfer") %>
        <% flash.each do |message_type, message| %>
            <%= message(message_type, message) %>
        <% end %>
        <div class="content content-narrow">
                <div class="block">
                    <div class="block-header">
                        <h3 class="block-title">Fund Transfer</h3>
                    </div>
                    <div class="block-content block-content-narrow">
                    <%= form_for(:transfer, url: transfers_path, html: {class: "form-horizontal push-50"}) do |f| %>
                    <%= short_has_error(current_account) %>
                          <div class="row">
                            <div class="col-sm-5">

                              <div class="form-group">
                                <div class="col-xs-12">
                                  <div class="form-material">
                                      <%= f.text_field :transfer_to, class: "form-control", placeholder: "Enter account ID" %>
                                      <%= f.label :transfer_to %>
                                  </div>
                                </div>
                              </div>

                              <div class="form-group">
                                <div class="col-xs-12">
                                  <div class="form-material">
                                      <%= f.text_field :transfer_amount, class: "form-control", placeholder: "Enter amount you want to tranfer" %>
                                      <%= f.label :transfer_amount %>
                                  </div>
                                </div>
                              </div>

                            </div>

                          <div class="col-sm-7">
                              <div class="form-group">
                                  <div class="col-xs-12">
                                      <div class="form-material">
                                      <%= f.text_area :note, class: "form-control", rows: "5", placeholder:"Enter your note.." %>
                                      <%= f.label :note %><br />
                                      </div>
                                      <div class="help-block text-right">use note as reminder for the transaction</div>
                                  </div>
                              </div>
                          </div>
                          </div>
                          


                          <div class="form-group">
                            <div class="col-xs-2">
                              <button class="btn btn-sm btn-info" type="submit"><i class="fa fa-send push-5-r"></i> Send Fund</button>
                            </div>
                          </div>
                    <% end -%>
                    </div>
                </div>
        </div>
