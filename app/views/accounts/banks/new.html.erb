<% provide(:title, "Bank Details") %>
        <% flash.each do |message_type, message| %>
            <%= message(message_type, message) %>
        <% end %>
        <div class="content content-narrow">
                <div class="block">
                    <div class="block-header">
                        <h3 class="block-title">Bank Details</h3>
                    </div>
                    <div class="block-content">
                    <%= form_for(@accounts_bank, url: banks_path, html: {class: "form-horizontal push-10-t push-10"}) do |f| %>
                      <!-- @accounts_bank = current_account.build_bank -->
                      <%= has_error(@accounts_bank) %>
                          <div class="form-group">
                              <div class="col-xs-6">
                                  <div class="form-material floating">
                                      <%= f.text_field :bank_holder_name, class: "form-control" %>
                                      <%= f.label :bank_holder_name %>
                                      <label for="contact3-firstname"></label>
                                  </div>
                              </div>
                              <div class="col-xs-6">
                                  <div class="form-material floating">
                                      <%= f.text_field :bank_account_number, class: "form-control" %>
                                      <%= f.label :bank_account_number %>
                                  </div>
                              </div>
                          </div>
                          <div class="form-group">
                              <div class="col-xs-12">
                                  <div class="form-material floating">
                                      <%= f.collection_select(:bank_list_id, BankList.all, :id, :name, {},class: "form-control") %>
                                      <%= f.label :bank %>
                                  </div>
                              </div>
                          </div>
                          <div class="block-content block-content-mini block-content-full">
                              <div class="row">
                                  <div class="col-xs-6">
                                <%= f.submit :disable_with => 'Submiting...', class: "btn btn-sm btn-info" do %>
                                  <i class="fa fa-link"></i> Link Your Bank
                              <% end -%>
                                  </div>
                                  <% if @accounts_bank.persisted? %>
                                    <div class="col-xs-6 text-right">
                                    <%= link_to bank_path(@accounts_bank), method: :delete, html: {class: "btn btn-sm btn-danger"} do %>
                                        <i class="fa fa-trash-o"></i> Delete Bank Details
                                    <% end -%>
                                  </div>
                                  <% end %>
                              </div>
                          </div>
                    <% end -%>
                  </div>
              </div>
          </div>