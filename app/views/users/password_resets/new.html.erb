<% provide(:title, "Password Resest") %>
<!-- Reminder Block -->
                    <div class="block block-themed animated fadeIn">
                        <div class="block-header bg-success">
                            <ul class="block-options">
                                <li>
                               <li>
                                    <%= link_to signin_path, 'data-toggle': "tooltip", 'data-placement': "left", title: "Sign In" do %>
                                   Sign In <i class="si si-login"></i>
                                    <% end -%>
                                </li>
                            </ul>
                            <h3 class="block-title">Password Reminder</h3>
                        </div>
                        <div class="block-content block-content-full block-content-narrow">
                            <!-- Reminder Title -->
                            <h1 class="h2 font-w600 push-30-t push-5">Project Y</h1>
                            <p>Please provide your accountâ€™s email and we will send you your password.</p>
                            <!-- END Reminder Title -->

                            <!-- Reminder Form -->
                            <!-- jQuery Validation (.js-validation-reminder class is initialized in js/pages/base_pages_reminder.js) -->
                            <!-- For more examples you can check out https://github.com/jzaefferer/jquery-validation -->
                            <%= form_for(:password_reset, url: password_resets_path, html: {class: "js-validation-reminder form-horizontal push-30-t push-50"}) do |f| %>
                                    <% flash.each do |message_type, message| %>
                                    <%= message(message_type, message) %>
                                <% end %>
                                <div class="form-group">
                                    <div class="col-xs-12">
                                        <div class="form-material form-material-primary floating">
                                            <%= f.text_field :email, class: "form-control" %>
                                            <%= f.label :email %>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-xs-12 col-sm-6 col-md-5">
                                        <button class="btn btn-block btn-primary" type="submit"><i class="si si-envelope-open pull-right"></i> Send Mail</button>
                                    </div>
                                </div>
                            <% end -%>
                            <!-- END Reminder Form -->
                        </div>
                    </div>
                    <!-- END Reminder Block -->