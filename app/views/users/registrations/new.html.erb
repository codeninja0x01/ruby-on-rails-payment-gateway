 <% provide(:title, "Sign Up") %>
                    <!-- Register Block -->
                    <div class="block block-themed animated fadeIn">
                        <div class="block-header bg-success">
                            <ul class="block-options">
                                <li>
                                    <a href="#" data-toggle="modal" data-target="#modal-terms">View Terms</a>
                                </li>
                               <li>
                                    <%= link_to signin_path, 'data-toggle': "tooltip", 'data-placement': "left", title: "Sign In" do %>
                                   Sign In <i class="si si-login"></i>
                                    <% end -%>
                                </li>
                            </ul>
                            <h3 class="block-title">Register</h3>
                        </div>
                        <div class="block-content block-content-full block-content-narrow">
                            <!-- Register Title -->
                            <h1 class="h2 font-w600 push-30-t push-5">Project Y</h1>
                            <p>Please fill the following details to create a new account.</p>
                            <% if @user_registration.errors.any? %>
                                <div class="alert alert-danger alert-dismissable">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                <h4 class="font-w300 push-15">Please fix the following errors</h4>
                                  <ul>
                                  <% @user_registration.errors.full_messages.each do |message| %>
                                    <li><%= message %></li>
                                  <% end %>
                                  </ul>
                                </div>
                              <% end %>
                            <!-- END Register Title -->
                            <!-- Register Form -->
                            <!-- jQuery Validation (.js-validation-register class is initialized in js/pages/base_pages_register.js) -->
                            <!-- For more examples you can check out https://github.com/jzaefferer/jquery-validation -->
                            <%= form_for(@user_registration, url: {action: "create"}, html: {class: "js-validation-register form-horizontal push-30-t push-50"}) do |f| %>
                            <%= f.fields_for :info do |i| %>
                                <div class="form-group">
                                    <div class="col-xs-6">
                                        <div class="form-material form-material-success">
                                              <%= i.text_field :first_name, class: "form-control", placeholder: "Enter first name" %>
                                              <%= i.label :first_name %>
                                        </div>
                                    </div>
                                    <div class="col-xs-6">
                                        <div class="form-material form-material-success">
                                              <%= i.text_field :last_name, class: "form-control", placeholder: "Enter last name" %>
                                              <%= i.label :last_name %>
                                        </div>
                                    </div>
                                </div>
                            <% end -%>
                                <div class="form-group">
                                    <div class="col-xs-12">
                                        <div class="form-material form-material-success">
                                              <%= f.text_field :email, class: "form-control", placeholder: "Enter email" %>
                                              <%= f.label :email %>
                                        </div>
                                    </div>
                                </div>
                                <%= f.fields_for :account do |a| %>
                                <div class="form-group">
                                    <div class="col-xs-12">
                                        <div class="form-material form-material-success">
                                        <%= a.collection_select(:account_type_id, Account::Type.all, :id, :name, {prompt: true},class: "form-control") %>
                                        <%= f.label :account_type_id %>
                                        </div>
                                    </div>
                                </div>
                              <% end -%>
                                <div class="form-group">
                                    <div class="col-xs-12">
                                        <div class="form-material form-material-success">
                                              <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
                                              <%= f.label :password %>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-xs-12">
                                        <div class="form-material form-material-success">
                                              <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Enter password confirmation" %>
                                              <%= f.label :password_confirmation %>
                                        </div>
                                    </div>
                                </div>                                
                                <div class="form-group">
                                    <div class="col-xs-12">
                                        <label><a data-toggle="modal" data-target="#modal-terms" href="#">Terms</a> <span class="text-danger">*</span></label>
                                    </div>
                                    <div class="col-xs-12">
                                        <label class="css-input switch switch-sm switch-success">
                                            <%= f.check_box :terms_of_service %>
                                           <span></span> I agree with terms &amp; conditions
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-xs-12 col-sm-6 col-md-5">
                                        <%= f.submit('Sign Up', class: "btn btn-block btn-primary" ) %>
                                    </div>
                                </div>
                            <% end -%>
                            <!-- END Register Form -->
                        </div>
                    </div>
