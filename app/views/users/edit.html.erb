 <% provide(:title, "Setting") %>

                <!-- END Page Header -->

                <!-- Page Content -->
                <div class="content content-narrow">
                        <div class="block">
                            <div class="block-header">
                                <h3 class="block-title">Personal Info</h3>
                            </div>
                            <div class="block-content block-content-narrow">
                            <% if @user.errors.any? %>
                                <div class="alert alert-danger alert-dismissable">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                <h4 class="font-w300 push-15">Please fix the following errors</h4>
                                  <ul>
                                  <% @user.errors.full_messages.each do |message| %>
                                    <li><%= message %></li>
                                  <% end %>
                                  </ul>
                                </div>
                              <% end %>
                                <%= form_for(@user, html: {class: "form-horizontal push-30-t push-50"}) do |f| %>
                            <%= f.fields_for :info do |i| %>
                                        <div class="form-group">
                                            <div class="col-xs-6">
                                                <div class="form-material">
                                                <%= i.text_field :first_name, class: "form-control" %>
                                                <%= i.label :first_name %>
                                                </div>
                                            </div>
                                            <div class="col-xs-6">
                                                <div class="form-material">
                                                    <%= i.text_field :last_name, class: "form-control"%>
                                                    <%= i.label :last_name %>
                                                </div>
                                            </div>
                                        </div>
                            <% end -%>
                                        <div class="form-group">
                                            <div class="col-xs-12">
                                                <div class="form-material">
                                                  <%= f.text_field :email, class: "form-control" %>
                                                  <%= f.label :email %>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-xs-6">
                                                <div class="form-material">
                                              <%= f.password_field :password, class: "form-control", placeholder: "Enter New password" %>
                                              <%= f.label :password, 'New Password' %>
                                                </div>
                                            </div>
                                            <div class="col-xs-6">
                                                <div class="form-material">
                                              <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Enter password confirmation" %>
                                              <%= f.label :password_confirmation %>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-xs-12 col-sm-6 col-md-4">
                                                <%= f.submit( class: "btn btn-block btn-success" ) %>
                                            </div>
                                        </div>
                                    <% end -%>
                                </div>

                            </div>
                        </div>

                <!-- END Page Content -->
